<Window x:Class="MrJobProject.Dialogs.YesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MrJobProject.Dialogs"
        mc:Ignorable="d"
        Title="YesNo" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="question" Grid.Column="1" ></TextBlock>

        <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button IsDefault="True" Name="YesBtn" MinWidth="60" Margin="0,0,10,0" Content="Yes" Click="YesBtn_Click" ></Button>
            <Button IsCancel="True" MinWidth="60" Content="Cancel"></Button>
        </WrapPanel>
    </Grid>
</Window>